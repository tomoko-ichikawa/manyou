<% if notice %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>
<h1>
  <%= 'グループ詳細' %>
</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= label :group, 'information' %>
  </div>
  <table class="table">
    <tr>
      <td>
        <%= label :group, :group_name %>
      </td>
      <td>
        <%= @group.group_name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= label :group, :updated_at %>
      </td>
      <td>
        <%= @group.updated_at %>
      </td>
    </tr>
    <tr>
      <td>
        <%= label :group, :created_at %>
      </td>
      <td>
        <%= @group.created_at %>
      </td>
    </tr>
  </table>
</div>
<%= link_to t('common.edit'), edit_group_path(@group), class: 'btn btn-warning' %>
<%= link_to t('common.back'), :back, class: 'btn btn-default' %>