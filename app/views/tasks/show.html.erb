<h1>task詳細</h1>
<p>task:<%= @task.task_name %></p>
<p>content:<%= @task.content %></p>
<p>created_at:<%= @task.created_at.strftime("%Y-%m-%d %H:%M") %></p>
<p>deadline:<%= @task.deadline.strftime("%Y-%m-%d %H:%M") %></p>
<p>status:<%= @task.status %></p>

<p>priority:<%= @task.priority_i18n %></p>
<% @task.labels.each do |label| %>
  <p>label：<%= label.label_name %></p>
<% end %>
  	
<p>添付ファイル</p>
<% if @task.images.attached? %>
  <% @task.images.each do |image| %>
  	<%= image_tag image %>
	<%= link_to "添付ファイル", image%>
  <% end %>
<% end %>

<br>
<button type="button" class="btn btn-default"><%= link_to 'task一覧画面にもどる',tasks_path %></button>
