<h1>task一覧</h1>
<p><%= notice %></p>

<div class="table">
  <table>
    <tr>
      <th><%= 'task_name' %></th>
      <th><%= 'created_at' %></th>
      <th><%= 'deadline' %></th>
      <th><%= 'status' %></th>
      <th><%= 'priority' %></th>
    </tr>

    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= task.status %></td>
        <td><%= task.priority_i18n %></td>
        <td><%= link_to 'details', task_path(task.id) %></td>
        <td><%= link_to t('edit'), edit_task_path(task.id) %></td>
        <td><%= link_to t('destroy'), task_path(task.id), method: :delete ,data:{confirm:I18n.t('confirm')} %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to '新しいtaskを投稿する',new_task_path %>
